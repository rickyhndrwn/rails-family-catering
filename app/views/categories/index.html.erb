<p style="color: green"><%= notice %></p>

<h1>Categories</h1>

<%= link_to "New Category", new_category_path, class:'btn btn-secondary' %>
<br><br>
<table class="table table-striped table-bordered">
  <thead class="table-dark">
    <tr>
      <th scope="col">No</th>
      <th scope="col">Name</th>
      <th scope="col" colspan="2">Action</th>
    </tr>
  </thead>
  <tbody>
    <% @categories.sort_by(&:name).each_with_index do |category, index| %>
    <tr>
      <td><%= index + 1 %></td>
      <td><%= category.name %></td>
      <td>
          <% link_to "Show", category, class:'btn btn-primary' %>
          <%= link_to "Edit", edit_category_path(category), class:'btn btn-secondary' %>
      </td>
      <td>
          <%= button_to "Delete", category, method: :delete, class:'btn btn-danger' %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
