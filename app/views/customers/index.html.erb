<p style="color: green"><%= notice %></p>

<h1>Customers</h1>

<%= link_to "New Customer", new_customer_path, class:'btn btn-secondary' %>
<br><br>
<table class="table table-striped table-bordered">
  <thead class="table-dark">
    <tr>
      <th scope="col">No</th>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col" colspan="2">Action</th>
    </tr>
  </thead>
  <tbody>
    <% @customers.sort_by(&:updated_at).reverse.each_with_index do |customer, index| %>
    <tr>
      <td><%= index + 1 %></td>
      <td><%= customer.name %></td>
      <td><%= customer.email %></td>
      <td>
          <% link_to "Show", customer, class:'btn btn-primary' %>
          <%= link_to "Edit", edit_customer_path(customer), class:'btn btn-secondary' %>
      </td>
      <td>
          <%= button_to "Delete", customer, method: :delete, class:'btn btn-danger' %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
