<p style="color: green"><%= notice %></p>

<h1>Orders</h1>

<%= link_to "Create Order", new_order_path, class:'btn btn-secondary' %>
<%= link_to "Today's Orders", orders_path(order_date: Order.get_todays_date), class:'btn btn-info' %>
<%= link_to "All Time's Orders", orders_path, class:'btn btn-success' %>

<br><br>
<table class="table table-striped table-bordered">
  <thead class="table-dark">
    <tr>
      <th scope="col">No</th>
      <th scope="col">Order Date</th>
      <th scope="col">Order Status</th>
      <th scope="col">Customer Name (Email)</th>
      <th scope="col">Total Price</th>
      <th scope="col" colspan="2">Action</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each_with_index do |order, index| %>
    <tr>
      <td><%= index + 1 %></td>
      <td><%= order.order_date %></td>
      <td><%= order.status %></td>
      <td>
        <%= order.customer.name %> (<%= order.customer.email %>)
      </td>
      <td><%= order.total_price %></td>
      <td>
          <%= link_to "Show", order, class:'btn btn-primary' %>
      </td>
      <td>
          <%= button_to "Delete", order, method: :delete, class:'btn btn-danger' %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
