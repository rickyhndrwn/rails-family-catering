<p style="color: green"><%= notice %></p>

<h1>Item List</h1>

<%= link_to "New Item", new_item_path, class:'btn btn-secondary' %>
<br><br>
<table class="table table-striped table-bordered">
  <thead class="table-dark">
    <tr>
      <th scope="col">No</th>
      <th scope="col">Name</th>
      <th scope="col">Description</th>
      <th scope="col">Price</th>
      <th scope="col">Category</th>
      <th scope="col" colspan="2">Action</th>
    </tr>
  </thead>
  <tbody>
    <% @items.each_with_index do |item, index| %>
    <tr>
      <td><%= index + 1 %></td>
      <td><%= item.name %></td>
      <td><%= item.description %></td>
      <td><%= item.price %></td>
      <td>
        <% item.categories.each do |category| %>
        <li><%= category.name %></li>
        <% end %>
      </td>
      <td>
          <%= link_to "Show", item, class:'btn btn-primary' %>
          <%= link_to "Edit", edit_item_path(item), class:'btn btn-secondary' %>
      </td>
      <td>
          <%= button_to "Delete", item, method: :delete, class:'btn btn-danger' %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
