<div id="<%= dom_id item %>">
  <p>
    <strong>Name:</strong>
    <%= item.name %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= item.description %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= item.price %>
  </p>

  <p>
    <strong>Categories:</strong>
    <% item.categories.each do |category| %>
    <li><<%= category.name %>/li>
    <% end %>
  </p>

</div>
